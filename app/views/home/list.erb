<div class="container">
  <div class = "row" style = "margin-top : 50px;">
    <div class = "col-md-3">
    </div>
    <div class = "col-md-6">
        <div class="panel panel-default"><div class="panel-heading">내가 보낸 메일 리스트</div></div>
        <ul class="list-group">
        <% @every_post.each do |p|%>
        <li class="list-group-item">
        <h4 class="list-group-item-heading">Title : <%= p.title %></h4>
        내용 : <%= p.content %> <br>
        시간 : <%= p.created_at %><br>
        이미지 :<%= p.image %> <img src="<%= p.image %>"><%=image_tag(p.image)%><br>
        <a href="/destroy/<%= p.id %>">[삭제]</a>
        <a href="/update_view/<%= p.id %>">[수정]</a>
        </li>
        <% end %>
        </ul>
        <a href="/">메일보내러가기</a>
    </div>
    <div class = "col-md-3">
    </div>
  </div>
</div>